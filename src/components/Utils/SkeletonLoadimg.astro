---
const { aspectRatio, class: className } = Astro.props;
---

<img class:list={["skeleton-load", { aspectRatio: aspectRatio  }, className]} src="/assets/skeleton-load-img.png" alt="" loading="eager">

<style define:vars={{aspectRatio}}>
    .skeleton-load{
        grid-area: stackImg;
        width: 100%;
        height: 100%;
        /* aspect-ratio: 32 / 50; */
        object-fit:cover;
        object-position: center center;
    }
    .skeleton-load{
        width: 100% !important;
        min-width: 110px;
        z-index: -1;
    }
    .aspectRatio{
        aspect-ratio: var(--aspectRatio);
    }
</style>