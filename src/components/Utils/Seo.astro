const siteData = {
    title: "Exezen Org",
    description: "Exezen is a tech-based organization, specializing in providing cutting-edge solutions, strategic insights, and expert guidance to empower individuals and businesses in the rapidly evolving digital landscape.",
    image: {
        src: "https://cdn.discordapp.com/attachments/772074658014167080/1155522417180037131/Exezen-thumbnail.png",
        alt: "Exezen.org"
    }
}
const {
  title,
  description,
  url = Astro.url,
  image,
  frontmatter,
  robots,
} = Astro.props;

// const jsonLD = jsonLDGenerator({
