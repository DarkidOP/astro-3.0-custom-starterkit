const siteData = {
    title: "Level 7 Ltd",
    description: "Level 7 is a comprehensive, full-service marketing, advertising, and business development firm based in Dhaka, Bangladesh. Established in 2010.",
    image: {
        src: "/dew-areana-logo.png",
        alt: "Level 7 Ltd"
    }
}
const {
  title,
  description,
  url = Astro.url,
  image,
  frontmatter,
  robots,
} = Astro.props;

// const jsonLD = jsonLDGenerator({
//   type: frontmatter ? "post" : "website",
//   post: frontmatter,
//   url,
// });
---

<!-- SEO -->
<link rel="canonical" href={url} />

<!-- Open Graph -->
<meta property="og:site_name" content="Level 7 Ltd" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={url} />
<meta property="og:image" content={image?.src || siteData.image.src} />
<meta property="og:image:url" content={image?.src || siteData.image.src} />
<meta
  property="og:image:secure_url"
  content={image?.src || siteData.image.src}
/>
<meta property="og:image:type" content="image/jpeg" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="600" />
<meta property="og:image:alt" content={image?.alt || siteData.image.alt} />
<meta name="theme-color" content="#6ca940"/>
<!-- Twitter -->
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:image" content={image?.src || siteData.image.src} />
<meta name="twitter:image:alt" content={title} />
<meta name="twitter:domain" content={import.meta.env.SITE} />

